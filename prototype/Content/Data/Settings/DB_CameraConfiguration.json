    "Drag": {
      "DefaultCamera": "ChaseClose",
      "LaunchCamera": {
        "Enabled": true,
        "Duration": 2.0,
        "Type": "Cinematic"
      },
      "FinishCamera": {
        "Enabled": true,
        "Duration": 3.0,
        "Type": "SlowMotion"
      }
    },
    "Drift": {
      "DefaultCamera": "Chase",
      "DriftCameraSettings": {
        "ExtraDistance": 2.0,
        "HeightBoost": 0.5,
        "FollowAngle": true,
        "AngleSmoothing": 0.3
      },
      "ScorePopups": true
