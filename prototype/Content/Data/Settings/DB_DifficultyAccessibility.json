  "AssistOptions": {
    "Driving": {
      "BrakingAssist": {
        "Name": "Braking Assist",
        "Description": "Automatically applies brakes before corners",
        "Type": "Toggle",
        "Default": false,
        "Levels": ["Off", "Low", "Medium", "High"]
      },
      "SteeringAssist": {
        "Name": "Steering Assist",
        "Description": "Helps keep the car pointed in the right direction",
        "Type": "Toggle",
        "Default": false,
        "Levels": ["Off", "Low", "Medium", "High"]
      },
      "StabilityControl": {
        "Name": "Stability Control (ESC)",
        "Description": "Electronic stability control prevents spinning",
        "Type": "Toggle",
        "Default": true
      },
      "TractionControl": {
        "Name": "Traction Control (TCS)",
        "Description": "Limits wheelspin during acceleration",
        "Type": "Toggle",
        "Default": true,
        "Levels": ["Off", "Low", "Medium", "High"]
      },
      "AntiLockBrakes": {
        "Name": "Anti-Lock Brakes (ABS)",
        "Description": "Prevents wheel lockup during braking",
        "Type": "Toggle",
        "Default": true
      },
      "AutoCountersteer": {
        "Name": "Auto Countersteer",
        "Description": "Automatically countersteers during slides",
        "Type": "Toggle",
        "Default": false
      }
    },
    "Transmission": {
      "AutoShift": {
        "Name": "Automatic Transmission",
        "Description": "Automatically shifts gears",
        "Type": "Toggle",
        "Default": true
      },
      "AutoClutch": {
        "Name": "Auto Clutch",
        "Description": "Automatically operates clutch (for manual mode)",
        "Type": "Toggle",
        "Default": true
