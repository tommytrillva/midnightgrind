      "ShiftAssist": {
        "Name": "Shift Indicator",
        "Description": "Shows optimal shift points on HUD",
        "Type": "Toggle",
        "Default": true
      }
    },
    "Racing": {
      "RacingLine": {
        "Name": "Racing Line",
        "Description": "Shows optimal racing line on track",
        "Type": "Option",
        "Default": "Corners",
        "Options": ["Off", "Corners", "Full"]
      },
      "BrakingZones": {
        "Name": "Braking Zones",
        "Description": "Shows braking points before corners",
        "Type": "Toggle",
        "Default": true
      },
      "OpponentIndicators": {
        "Name": "Opponent Indicators",
        "Description": "Shows nearby opponents on HUD",
        "Type": "Toggle",
        "Default": true
      },
      "MiniMap": {
        "Name": "Mini Map",
        "Description": "Shows track map with positions",
        "Type": "Toggle",
        "Default": true
      }
    },
    "Rewind": {
      "RewindEnabled": {
        "Name": "Rewind Feature",
        "Description": "Allows rewinding time after mistakes",
        "Type": "Toggle",
        "Default": true
      },
      "RewindCharges": {
        "Name": "Rewind Charges",
        "Description": "Number of rewinds per race (-1 = unlimited)",
        "Type": "Slider",
        "Default": 5,
        "Range": [-1, 10]
