  "MoonPhases": {
    "Enabled": true,
    "Cycle": 28,
    "Phases": {
      "NewMoon": { "Brightness": 0, "NightBonus": { "Stealth": 1.5 } },
      "WaxingCrescent": { "Brightness": 0.15 },
      "FirstQuarter": { "Brightness": 0.3 },
      "WaxingGibbous": { "Brightness": 0.6 },
      "FullMoon": { "Brightness": 1.0, "NightBonus": { "Visibility": 1.3 } },
      "WaningGibbous": { "Brightness": 0.6 },
      "LastQuarter": { "Brightness": 0.3 },
      "WaningCrescent": { "Brightness": 0.15 }
    }
  },

  "CityLighting": {
    "Streetlights": {
      "Enabled": true,
      "TurnOnTime": "19:00",
      "TurnOffTime": "06:00",
      "Types": {
        "Highway": { "Spacing": 50, "Intensity": 0.8 },
        "Urban": { "Spacing": 30, "Intensity": 1.0 },
        "Residential": { "Spacing": 40, "Intensity": 0.6 },
        "Industrial": { "Spacing": 60, "Intensity": 0.5 }
      }
    },
    "BuildingLights": {
      "Enabled": true,
      "WindowLighting": { "RandomPattern": true },
      "Signage": { "Neon": true, "Digital": true },
      "Animated": { "Billboards": true, "Marquees": true }
    },
    "TrafficLights": {
      "EmissiveAtNight": true,
      "ReflectOnWetRoad": true
    },
    "NeonDistrict": {
      "Enabled": true,
      "Location": "Downtown",
      "IntenseNeon": true,
      "ReflectiveRoads": true
    }
  },

  "Transitions": {
    "BlendDuration": 300,
    "SmoothLighting": true,
    "CloudTransitions": true,
    "StarFade": true
  },

  "PlayerControls": {
    "TimeSkip": {
      "Enabled": true,
      "Options": ["Dawn", "Day", "Dusk", "Night"],
      "Cost": 0,
      "Locations": ["Safehouse", "Garage"]
    },
    "TimeLock": {
      "Enabled": true,
      "ForPhotoMode": true,
      "ForRaces": true
    }
  },

  "RaceTimeSettings": {
    "PresetTimes": {
      "SunriseChallenge": "06:00",
      "MiddayShowdown": "12:00",
      "GoldenHourGrandPrix": "18:00",
      "MidnightRun": "00:00"
    },
    "DynamicDuringRace": {
      "Enabled": true,
      "AcceleratedTime": { "Multiplier": 4 }
    }
  },

  "VisualEffects": {
    "LensEffects": {
      "Sunflare": { "Dawn": true, "Dusk": true },
      "Moonflare": { "Night": true },
      "StreetlightFlare": { "Night": true }
    },
    "Reflections": {
      "WetRoads": { "TimeOfDay": "All" },
      "CarPaint": { "DynamicCubemap": true },
      "Windows": { "ReflectSky": true }
    },
    "Shadows": {
      "ContactShadows": true,
      "CascadedShadows": 4,
      "ShadowDistance": { "Day": 500, "Night": 100 }
    },
    "VolumetricLighting": {
      "Enabled": true,
      "GodRays": { "Dawn": true, "Dusk": true },
      "FogShafts": { "Night": true }
    }
  },

  "Performance": {
    "QualityScaling": {
      "Low": { "Shadows": "Off", "Volumetrics": "Off" },
      "Medium": { "Shadows": "Medium", "Volumetrics": "Low" },
      "High": { "Shadows": "High", "Volumetrics": "Medium" },
      "Ultra": { "Shadows": "Ultra", "Volumetrics": "High" }
    },
    "DynamicResolution": true,
    "LODDistance": { "Day": 1000, "Night": 500 }
  },

  "UI": {
    "ClockDisplay": {
      "Position": "TopRight",
      "Format": ["12Hour", "24Hour"],
      "ShowPeriod": true
