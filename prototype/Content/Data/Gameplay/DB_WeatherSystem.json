{
  "Version": "1.0",
  "Description": "MIDNIGHT GRIND - Weather System Configuration",

  "WeatherSystem": {
    "Enabled": true,
    "DynamicWeather": true,
    "TransitionSpeed": 300,
    "AffectsGameplay": true,
    "AffectsVisibility": true,
    "AffectsAudio": true
  },

  "WeatherTypes": {
    "Clear": {
      "ID": "WEATHER_CLEAR",
      "Name": "Clear Skies",
      "Description": "Perfect driving conditions",
      "Visual": {
        "CloudCoverage": 0.1,
        "Visibility": 1.0,
        "SunIntensity": 1.0,
        "SkyColor": "#87CEEB"
      },
      "Physics": {
        "GripMultiplier": 1.0,
        "AeroMultiplier": 1.0
      },
      "Audio": {
        "WindIntensity": 0.2,
        "AmbientVolume": 1.0
      },
      "Probability": 0.35
    },
    "Cloudy": {
      "ID": "WEATHER_CLOUDY",
      "Name": "Overcast",
      "Description": "Cloud cover, no rain",
      "Visual": {
        "CloudCoverage": 0.7,
        "Visibility": 0.9,
        "SunIntensity": 0.5,
        "SkyColor": "#708090"
      },
      "Physics": {
        "GripMultiplier": 1.0,
        "AeroMultiplier": 1.0
      },
      "Audio": {
        "WindIntensity": 0.4,
        "AmbientVolume": 0.9
      },
      "Probability": 0.25
    },
    "LightRain": {
      "ID": "WEATHER_LIGHT_RAIN",
      "Name": "Light Rain",
      "Description": "Slight drizzle, reduced grip",
      "Visual": {
        "CloudCoverage": 0.8,
        "Visibility": 0.8,
        "SunIntensity": 0.3,
        "RainIntensity": 0.3,
        "WetSurfaces": true,
        "Reflections": "High"
      },
      "Physics": {
        "GripMultiplier": 0.85,
        "AeroMultiplier": 0.98,
        "SprayEnabled": true
      },
      "Audio": {
        "RainVolume": 0.4,
        "WindIntensity": 0.5,
        "TireSpray": true
      },
      "Probability": 0.15
    },
    "HeavyRain": {
      "ID": "WEATHER_HEAVY_RAIN",
      "Name": "Heavy Rain",
      "Description": "Torrential rain, significantly reduced grip",
      "Visual": {
        "CloudCoverage": 1.0,
        "Visibility": 0.5,
        "SunIntensity": 0.1,
        "RainIntensity": 0.8,
        "WetSurfaces": true,
        "Reflections": "Ultra",
        "Puddles": true,
        "WindshieldDroplets": true
      },
      "Physics": {
        "GripMultiplier": 0.65,
        "AeroMultiplier": 0.95,
        "SprayEnabled": true,
        "HydroplaningRisk": true,
        "PuddleSplash": true
      },
      "Audio": {
        "RainVolume": 0.9,
        "WindIntensity": 0.7,
        "ThunderEnabled": false,
        "RoofImpact": true,
        "TireSpray": true
      },
      "Probability": 0.08
    },
    "Storm": {
      "ID": "WEATHER_STORM",
      "Name": "Thunderstorm",
      "Description": "Severe storm with lightning",
      "Visual": {
        "CloudCoverage": 1.0,
        "Visibility": 0.3,
        "SunIntensity": 0.05,
        "RainIntensity": 1.0,
        "WetSurfaces": true,
        "Reflections": "Ultra",
        "Puddles": true,
        "WindshieldDroplets": true,
        "Lightning": {
          "Enabled": true,
          "Frequency": { "Min": 10, "Max": 45 },
          "IlluminatesScene": true
        }
      },
      "Physics": {
        "GripMultiplier": 0.5,
        "AeroMultiplier": 0.9,
        "SprayEnabled": true,
        "HydroplaningRisk": true,
        "WindGusts": { "Enabled": true, "Strength": 0.3 }
      },
      "Audio": {
        "RainVolume": 1.0,
        "WindIntensity": 0.9,
        "ThunderEnabled": true,
        "ThunderDistance": { "Min": 500, "Max": 5000 },
        "RoofImpact": true
      },
      "Probability": 0.05
    },
    "Fog": {
      "ID": "WEATHER_FOG",
      "Name": "Dense Fog",
      "Description": "Limited visibility, mysterious atmosphere",
      "Visual": {
        "CloudCoverage": 0.6,
        "Visibility": 0.25,
        "FogDensity": 0.8,
        "FogColor": "#C0C0C0",
        "FogHeight": 50,
        "VolumetricFog": true
      },
      "Physics": {
        "GripMultiplier": 0.9,
        "AeroMultiplier": 1.0
      },
      "Audio": {
        "MuffledSounds": true,
        "AmbientVolume": 0.7,
        "EchoReduction": 0.5
      },
      "Probability": 0.07
    },
    "MorningMist": {
      "ID": "WEATHER_MIST",
      "Name": "Morning Mist",
      "Description": "Light mist, atmospheric",
      "Visual": {
        "CloudCoverage": 0.3,
        "Visibility": 0.6,
        "FogDensity": 0.3,
        "FogColor": "#E8E8E8",
        "GroundFog": true
      },
      "Physics": {
        "GripMultiplier": 0.95,
        "AeroMultiplier": 1.0
      },
      "Audio": {
        "MuffledSounds": false,
        "AmbientVolume": 0.85
      },
      "TimeRestriction": { "Start": 4, "End": 9 },
      "Probability": 0.05
    }
  },

  "SeasonalWeather": {
    "Enabled": true,
    "Summer": {
      "ProbabilityModifiers": {
        "Clear": 1.5,
        "HeavyRain": 0.5,
        "Storm": 1.2,
        "Fog": 0.3
      },
      "SpecialEvents": ["Heatwave"]
    },
    "Fall": {
      "ProbabilityModifiers": {
        "Cloudy": 1.3,
        "LightRain": 1.4,
        "Fog": 1.5
      },
      "SpecialEvents": ["FallingLeaves"]
    },
    "Winter": {
      "ProbabilityModifiers": {
        "Cloudy": 1.2,
        "HeavyRain": 1.3,
        "Fog": 1.4
      },
      "SpecialEvents": ["ColdNight"]
    },
    "Spring": {
      "ProbabilityModifiers": {
        "LightRain": 1.5,
        "MorningMist": 2.0,
        "Storm": 0.8
      },
      "SpecialEvents": ["CherryBlossoms"]
    }
  },

  "SpecialWeatherEvents": {
    "Heatwave": {
      "ID": "EVENT_HEATWAVE",
      "Visual": {
        "HeatDistortion": true,
        "Mirages": true,
        "IntenseSun": true
      },
      "Duration": 3600
    },
    "FallingLeaves": {
      "ID": "EVENT_LEAVES",
      "Visual": {
        "LeafParticles": true,
        "LeafColors": ["Orange", "Red", "Yellow", "Brown"]
      },
      "Physics": {
        "GripReduction": 0.05
      }
    },
    "ColdNight": {
      "ID": "EVENT_COLD",
      "Visual": {
        "BreathVisible": true,
        "FrostOnWindows": true
      },
      "Physics": {
        "ColdTires": true,
        "GripReduction": 0.1
      }
    },
    "CherryBlossoms": {
      "ID": "EVENT_SAKURA",
      "Visual": {
        "PetalParticles": true,
        "PetalColor": "#FFB7C5"
      },
      "Location": "JapanTown"
    }
  },

  "WeatherTransitions": {
    "DefaultDuration": 300,
    "FastTransition": 120,
    "SlowTransition": 600,
    "Effects": {
      "CrossFade": true,
      "GradualChange": true,
      "WindShift": true
    }
  },

  "RegionalWeather": {
    "Enabled": true,
    "Regions": {
      "Downtown": { "FogBonus": 0.3, "RainBonus": 0 },
      "Industrial": { "FogBonus": 0.5, "RainBonus": 0.1 },
      "Coastal": { "FogBonus": 0.4, "RainBonus": 0.2 },
      "Mountains": { "FogBonus": 0.6, "RainBonus": 0.3 },
      "Desert": { "FogBonus": -0.5, "RainBonus": -0.4 }
    }
  },

  "GameplayEffects": {
    "VisibilityAffectsAI": true,
    "WetRoadsReduceGrip": true,
    "HeadlightsRequired": {
      "Rain": true,
      "Fog": true,
      "Night": true
    },
    "WiperSystem": {
      "Enabled": true,
      "Speeds": ["Off", "Intermittent", "Low", "High"],
      "AutoWipers": true
    },
    "PuddlePhysics": {
      "Enabled": true,
      "SplashParticles": true,
      "HydroplaningSpeed": 120
    }
  },

  "PhotoModeOverride": {
    "Enabled": true,
    "AllWeatherAvailable": true,
    "IntensityControl": true,
    "LightningManual": true
  }
}
