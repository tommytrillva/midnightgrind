        "WarningThreshold": 0.8,
        "Effects": { "Worn": "EngineDamageIncrease" }
      },
      "Coolant": {
        "MaxDistance": 75000,
        "WarningThreshold": 0.7,
        "Effects": { "Worn": "OverheatRisk" }
