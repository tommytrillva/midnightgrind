    "Violations": {
      "Speeding": { "Heat": 5, "Threshold": 80 },
      "Reckless": { "Heat": 10, "TrafficNearMiss": true },
      "HitAndRun": { "Heat": 25, "TrafficCollision": true },
      "PropertyDamage": { "Heat": 15, "PerObject": true },
      "NearMissPolice": { "Heat": 20 },
      "EvadePolice": { "Heat": 30, "PerAttempt": true },
      "RamPolice": { "Heat": 50, "PerHit": true },
      "DisablePolice": { "Heat": 75, "PerVehicle": true }
    },
    "Escalation": {
      "ContinuedViolations": true,
      "TimeInPursuit": { "Per30Seconds": 10 },
      "HighSpeedBonus": { "Over200": 1.5 }
    }
  },

  "HeatDecay": {
