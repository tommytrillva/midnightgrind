        "Units": 6,
        "Type": ["PursuitCar", "Interceptor"],
        "Aggression": 0.8,
        "Roadblocks": true,
        "SpikeStrips": true,
        "Helicopter": true
      },
      "DecayTime": 300,
      "REPMultiplier": 2.0
    },
    "Level5": {
      "ID": "HEAT_MAXIMUM",
      "Name": "Most Wanted",
      "Description": "Elite response, no escape",
      "Trigger": { "EvadeLevel4": true, "ProlongedPursuit": 300 },
      "PoliceResponse": {
        "Units": 8,
        "Type": ["Interceptor", "SUV", "Helicopter"],
        "Aggression": 1.0,
        "Roadblocks": true,
        "SpikeStrips": true,
        "Helicopter": true,
        "SwatVan": true
