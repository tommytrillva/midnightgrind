    },
    "OutOfSight": {
      "Timer": 30,
      "DecayMultiplier": 3
    }
  },

  "Escape": {
    "Conditions": {
      "OutOfSight": 30,
      "NoPoliceNearby": 200,
      "HeatDecayed": true
    },
    "Rewards": {
      "BaseREP": 500,
      "PerHeatLevel": 500,
      "PursuitBonus": { "Per30Seconds": 250 },
      "TakedownBonus": { "PerPolice": 100 }
