{
  "Version": "1.0",
  "Description": "MIDNIGHT GRIND - Vehicle Condition, Wear, and Maintenance System",

  "GlobalSettings": {
    "Enabled": true,
    "WearSystem": true,
    "MaintenanceRequired": true,
    "DamageAffectsPerformance": true,
    "VisualDamage": true
  },

  "ConditionMetrics": {
    "Engine": {
      "ID": "COND_ENGINE",
      "MaxCondition": 100,
      "WearFactors": ["Overrev", "HighRPM", "Temperature", "Age"],
      "PerformanceEffect": { "Power": true, "Reliability": true },
      "FailurePoint": 10
    },
    "Transmission": {
      "ID": "COND_TRANS",
      "MaxCondition": 100,
      "WearFactors": ["ShiftAbuse", "Launch", "Burnouts"],
      "PerformanceEffect": { "ShiftSpeed": true, "Gearing": true },
      "FailurePoint": 15
    },
    "Brakes": {
      "ID": "COND_BRAKES",
      "MaxCondition": 100,
      "WearFactors": ["HardBraking", "Heat", "Usage"],
      "PerformanceEffect": { "StoppingPower": true, "Fade": true },
      "FailurePoint": 20
    },
    "Suspension": {
      "ID": "COND_SUSPENSION",
      "MaxCondition": 100,
      "WearFactors": ["Impacts", "Curbs", "Jumps"],
      "PerformanceEffect": { "Handling": true, "Stability": true },
      "FailurePoint": 25
    },
    "Tires": {
      "ID": "COND_TIRES",
      "MaxCondition": 100,
      "WearFactors": ["Drift", "Burnout", "Distance", "Aggression"],
      "PerformanceEffect": { "Grip": true, "Traction": true },
      "FailurePoint": 15
    },
    "Body": {
      "ID": "COND_BODY",
      "MaxCondition": 100,
      "WearFactors": ["Collisions", "Scrapes", "Weather"],
      "PerformanceEffect": { "Aerodynamics": true, "Weight": false },
      "FailurePoint": 10
    }
  },

  "WearRates": {
    "Presets": {
      "Realistic": {
        "ID": "WEAR_REALISTIC",
        "Multiplier": 1.0,
        "Description": "Standard wear rates"
      },
      "Reduced": {
        "ID": "WEAR_REDUCED",
        "Multiplier": 0.5,
        "Description": "Half wear speed"
      },
      "Minimal": {
        "ID": "WEAR_MINIMAL",
        "Multiplier": 0.25,
        "Description": "Quarter wear speed"
      },
      "Off": {
        "ID": "WEAR_OFF",
        "Multiplier": 0,
        "Description": "No wear"
      }
    },
    "Factors": {
      "DrivingStyle": { "Aggressive": 1.5, "Normal": 1.0, "Conservative": 0.7 },
      "TrackType": { "Street": 1.0, "Track": 0.8, "OffRoad": 1.5 },
      "Weather": { "Dry": 1.0, "Wet": 1.2, "Snow": 1.3 }
    }
  },

  "DamageSystem": {
    "Types": {
      "Mechanical": {
        "Causes": ["Overuse", "Abuse", "Neglect"],
        "Gradual": true,
        "Repairable": true
      },
      "Collision": {
        "Causes": ["Impacts", "Crashes", "Objects"],
        "Immediate": true,
        "Repairable": true
      },
      "Cosmetic": {
        "Causes": ["Scrapes", "Scratches", "Dents"],
        "PerformanceEffect": false,
        "Repairable": true
      }
    },
    "Severity": {
      "Minor": { "Threshold": 75, "Effect": "Minimal" },
      "Moderate": { "Threshold": 50, "Effect": "Noticeable" },
      "Severe": { "Threshold": 25, "Effect": "Significant" },
      "Critical": { "Threshold": 10, "Effect": "Major" }
    }
  },

  "PerformanceEffects": {
    "Engine": {
      "At75": { "PowerLoss": 0 },
      "At50": { "PowerLoss": 5 },
      "At25": { "PowerLoss": 15 },
      "At10": { "PowerLoss": 30, "RandomMisfires": true }
    },
    "Brakes": {
      "At75": { "BrakingLoss": 0 },
      "At50": { "BrakingLoss": 10, "FadeIncrease": 20 },
      "At25": { "BrakingLoss": 25, "FadeIncrease": 50 },
      "At10": { "BrakingLoss": 50, "Unreliable": true }
    },
    "Suspension": {
      "At75": { "HandlingLoss": 0 },
      "At50": { "HandlingLoss": 5, "StabilityLoss": 10 },
      "At25": { "HandlingLoss": 15, "StabilityLoss": 25 },
      "At10": { "HandlingLoss": 30, "Unpredictable": true }
    },
    "Tires": {
      "At75": { "GripLoss": 0 },
      "At50": { "GripLoss": 10 },
      "At25": { "GripLoss": 25, "BlowoutRisk": true },
      "At10": { "GripLoss": 50, "BlowoutHighRisk": true }
    }
  },

  "MaintenanceSystem": {
    "Services": {
      "BasicService": {
        "ID": "SERVICE_BASIC",
        "Restores": 25,
        "Cost": { "Base": 1000 },
        "Time": "Quick"
      },
      "FullService": {
        "ID": "SERVICE_FULL",
        "Restores": 50,
        "Cost": { "Base": 5000 },
        "Time": "Medium"
      },
      "Complete": {
        "ID": "SERVICE_COMPLETE",
        "Restores": 100,
        "Cost": { "Base": 15000 },
        "Time": "Long"
      }
    },
    "ComponentRepair": {
      "Engine": { "CostMultiplier": 3.0 },
      "Transmission": { "CostMultiplier": 2.5 },
      "Brakes": { "CostMultiplier": 1.0 },
      "Suspension": { "CostMultiplier": 1.5 },
      "Tires": { "CostMultiplier": 0.8 },
      "Body": { "CostMultiplier": 2.0 }
    },
    "Locations": {
      "Garage": { "AllServices": true, "Discount": 0 },
      "Shop": { "AllServices": true, "Discount": 0 },
      "Pit": { "QuickRepair": true, "Premium": 20 }
    }
  },

  "WarningSystem": {
    "Indicators": {
      "Dashboard": {
        "EngineLight": { "At": 50 },
        "BrakeLight": { "At": 40 },
        "TirePressure": { "At": 30 }
      },
      "HUD": {
        "ConditionWarning": { "At": 25 },
        "CriticalWarning": { "At": 10 }
      }
    },
    "Notifications": {
      "ServiceDue": { "At": 50 },
      "ServiceRequired": { "At": 25 },
      "Critical": { "At": 10 }
    },
    "Audio": {
      "WarningChime": { "At": 25 },
      "AlarmSound": { "At": 10 }
    }
  },

  "VisualCondition": {
    "Engine": {
      "Smoke": { "At": 30 },
      "Fire": { "At": 10 },
      "Flames": { "At": 5, "Failure": true }
    },
    "Body": {
      "Scratches": { "At": 75 },
      "Dents": { "At": 50 },
      "MissingParts": { "At": 25 },
      "Destroyed": { "At": 10 }
    },
    "Tires": {
      "Wear": { "At": 50 },
      "Flat": { "At": 10 },
      "Blowout": { "At": 5 }
    }
  },

  "GameModeSettings": {
    "FreeRoam": {
      "WearEnabled": true,
      "Rate": "Reduced"
    },
    "Race": {
      "WearEnabled": true,
      "Rate": "Realistic"
    },
    "Endurance": {
      "WearEnabled": true,
      "Rate": "Realistic",
      "Critical": true
    },
    "Casual": {
      "WearEnabled": false,
      "Optional": true
    }
  },

  "Insurance": {
    "Coverage": {
      "Basic": { "RepairDiscount": 10 },
      "Standard": { "RepairDiscount": 25 },
      "Premium": { "RepairDiscount": 50 },
      "Elite": { "RepairDiscount": 75 }
    },
    "Claims": {
      "PerMonth": 3,
      "Excess": { "Percentage": 10 }
    }
  },

  "UI": {
    "ConditionDisplay": {
      "Overview": { "AllComponents": true },
      "Detailed": { "PerComponent": true },
      "QuickView": { "Summary": true }
    },
    "MaintenanceMenu": {
      "ServiceOptions": true,
      "CostEstimate": true,
      "TimeEstimate": true
    },
    "InRace": {
      "WarningIcons": true,
      "ConditionBar": { "Optional": true }
    }
  }
}
