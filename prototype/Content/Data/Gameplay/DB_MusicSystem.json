      "Heat1": { "Intensity": 0.4, "Tension": "Low" },
      "Heat2": { "Intensity": 0.6, "Tension": "Medium" },
      "Heat3": { "Intensity": 0.8, "Tension": "High" },
      "Heat4": { "Intensity": 0.9, "Tension": "VeryHigh" },
      "Heat5": { "Intensity": 1.0, "Tension": "Maximum" }
