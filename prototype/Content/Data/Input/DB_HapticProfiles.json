      "Concrete": {
        "BaseIntensity": 0.08,
        "Frequency": 80,
        "SpeedScaling": 0.003
      },
      "Gravel": {
        "BaseIntensity": 0.25,
        "Frequency": 40,
        "SpeedScaling": 0.004
      },
      "Dirt": {
        "BaseIntensity": 0.15,
        "Frequency": 50,
        "SpeedScaling": 0.003
      },
      "Grass": {
        "BaseIntensity": 0.20,
        "Frequency": 45,
        "SpeedScaling": 0.004
