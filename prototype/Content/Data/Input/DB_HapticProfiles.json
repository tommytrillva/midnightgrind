      "MaxIntensity": 0.35
    },
    "RedlineVibration": {
      "Enabled": true,
      "Threshold": 0.95,
      "Intensity": 0.6,
      "Frequency": 25
    },
    "GearShift": {
      "Enabled": true,
      "UpshiftPulse": 0.4,
      "DownshiftPulse": 0.35,
      "Duration": 0.08
    },
    "EngineTypes": {
      "I4": { "BaseFrequency": 40, "Smoothness": 0.7 },
      "I6": { "BaseFrequency": 45, "Smoothness": 0.85 },
      "V6": { "BaseFrequency": 50, "Smoothness": 0.75 },
      "V8": { "BaseFrequency": 30, "Smoothness": 0.6 },
