        "SteeringAssist": ["Off"],
        "BrakingAssist": ["Off"],
        "RacingLine": ["Off"],
        "Rewind": ["Off"]
      }
    },
    "Esports": {
      "AllowedAssists": {
        "TransmissionType": ["Manual", "ManualWithClutch"],
        "TractionControl": ["Off"],
        "StabilityControl": ["Off"],
        "ABS": ["Off"],
        "SteeringAssist": ["Off"],
        "BrakingAssist": ["Off"],
        "RacingLine": ["Off"],
        "Rewind": ["Off"]
      }
    }
