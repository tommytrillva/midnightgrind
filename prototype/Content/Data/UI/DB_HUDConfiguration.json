      "Retro": {
        "Numbers": ["3", "2", "1", "GO!"],
        "Duration": 1.0,
        "Sound": "SFX_Countdown_Retro",
        "Animation": "PixelReveal",
        "UnlockCondition": "REP_TIER_STREET"
      },
      "Dramatic": {
        "Numbers": ["READY", "SET", "GO!"],
        "Duration": 1.5,
        "Sound": "SFX_Countdown_Dramatic",
        "Animation": "SlowZoom",
        "UnlockCondition": "REP_TIER_PRO"
      },
      "JDM": {
        "Numbers": ["\u4e09", "\u4e8c", "\u4e00", "GO!"],
        "Duration": 1.0,
        "Sound": "SFX_Countdown_JDM",
        "Animation": "NeonFlash",
        "UnlockCondition": "WIN_JDM_CHAMPIONSHIP"
      }
    },
    "DragRace": {
