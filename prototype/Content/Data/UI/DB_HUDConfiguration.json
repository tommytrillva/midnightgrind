  "Notifications": {
    "RaceEvents": {
      "LapComplete": { "Duration": 2.0, "Position": "TopCenter", "Sound": true },
      "BestLap": { "Duration": 3.0, "Position": "Center", "Sound": true, "Animation": "GoldFlash" },
      "PositionChange": { "Duration": 1.5, "Position": "CenterRight", "Sound": true },
      "FinalLap": { "Duration": 2.5, "Position": "TopCenter", "Sound": true, "Animation": "Pulse" },
      "Checkpoint": { "Duration": 1.0, "Position": "TopCenter", "Sound": true },
      "WrongWay": { "Duration": 0, "Position": "Center", "Sound": true, "Persistent": true }
    },
    "DriftEvents": {
      "DriftStart": { "Duration": 0, "Position": "CenterRight", "Sound": false },
      "DriftEnd": { "Duration": 2.0, "Position": "CenterRight", "Sound": true },
      "ComboBreak": { "Duration": 1.5, "Position": "CenterRight", "Sound": true },
      "NewHighScore": { "Duration": 3.0, "Position": "Center", "Sound": true, "Animation": "Celebration" }
    },
    "Achievements": {
      "Duration": 4.0,
      "Position": "TopRight",
      "Sound": true,
      "ShowProgress": true
    },
    "LevelUp": {
      "Duration": 5.0,
      "Position": "Center",
      "Sound": true,
      "Animation": "LevelUpFanfare"
    },
    "Rewards": {
      "Duration": 3.0,
      "Position": "Center",
      "Sound": true,
      "ShowItems": true
    }
  },

  "CountdownSequence": {
