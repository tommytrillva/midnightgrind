{
  "Version": "1.0",
  "Description": "MIDNIGHT GRIND - Race Results and Post-Race Summary System",

  "GlobalSettings": {
    "Enabled": true,
    "AutoShow": true,
    "Duration": { "Default": 30, "Skippable": true },
    "DetailedStats": true
  },

  "ResultsScreen": {
    "Layout": {
      "Header": {
        "EventName": true,
        "TrackName": true,
        "Date": true,
        "Mode": true
      },
      "Body": {
        "Standings": true,
        "PlayerHighlight": true,
        "Statistics": true
      },
      "Footer": {
        "Rewards": true,
        "Actions": true
      }
    },
    "Timing": {
      "ShowAfter": "PodiumCeremony",
      "AutoProgress": { "Seconds": 30 },
      "SkipEnabled": { "After": 5 }
    }
  },

  "Standings": {
    "Display": {
      "Position": true,
      "PlayerName": true,
      "Vehicle": true,
      "TotalTime": true,
      "Gap": { "ToWinner": true, "ToAhead": true },
      "BestLap": true,
      "Points": { "InSeries": true }
    },
    "Formatting": {
      "PlayerHighlight": { "Color": "#00FF00", "Glow": true },
      "FriendsHighlight": { "Color": "#00AAFF" },
      "CrewHighlight": { "Color": "#FF00FF" },
      "TopThree": { "GoldSilverBronze": true }
    },
    "Pagination": {
      "MaxVisible": 12,
      "Scroll": true,
      "ShowPlayerPosition": { "Always": true }
    }
  },

  "StatisticsBreakdown": {
    "General": {
      "FinalPosition": true,
      "TotalTime": true,
      "Laps": true,
      "GapToFirst": true,
      "PositionsGained": true
    },
    "LapAnalysis": {
      "BestLap": true,
      "AverageLap": true,
      "WorstLap": true,
      "Consistency": { "Percentage": true },
      "LapByLap": { "Expandable": true }
    },
    "Speed": {
      "TopSpeed": true,
      "AverageSpeed": true,
      "SpeedThroughSectors": { "Optional": true }
    },
    "Performance": {
      "Overtakes": { "Made": true, "Received": true },
      "TimeInFirst": { "Laps": true },
      "BrakePoints": { "Count": true },
      "ThrottleTime": { "Percentage": true }
    },
    "Drift": {
      "TotalScore": true,
      "BestCombo": true,
      "MaxAngle": true,
      "LongestDrift": true
    }
  },

  "SectorTimes": {
    "Display": {
      "AllSectors": true,
      "ColorCoding": {
        "PersonalBest": "#00FF00",
        "SessionBest": "#AA00FF",
        "Slower": "#FFFF00"
      }
    },
    "Comparison": {
      "ToBestLap": true,
      "ToWinner": true,
      "ToPersonalBest": true
    },
    "TheoreticalBest": {
      "Calculate": true,
      "Display": true
    }
  },

  "RewardsDisplay": {
    "Breakdown": {
      "BaseCash": true,
      "BonusCash": true,
      "TotalCash": true,
      "BaseREP": true,
      "BonusREP": true,
      "TotalREP": true
    },
    "Bonuses": {
      "FastestLap": { "Highlight": true },
      "CleanRace": { "Highlight": true },
      "FirstRaceOfDay": { "Highlight": true },
      "Streaks": { "Highlight": true }
    },
    "Animation": {
      "Counter": true,
      "PopIn": true,
      "Sound": true
    },
    "Items": {
      "PartsWon": true,
      "CosmeticsWon": true,
      "AchievementsUnlocked": true
    }
  },

  "Achievements": {
    "InRace": {
      "Display": true,
      "Animation": true,
      "Sound": true
    },
    "FirstTime": {
      "TrackCompletion": true,
      "ModeCompletion": true
    },
    "Personal": {
      "NewPersonalBest": { "Highlight": true, "Celebration": true },
      "NewRecord": { "Highlight": true, "Celebration": true }
    }
  },

  "Comparison": {
    "ToOthers": {
      "Enabled": true,
      "SelectPlayer": true,
      "SideBySide": true
    },
    "ToPersonalBest": {
      "Enabled": true,
      "ShowDelta": true,
      "PerLap": true
    },
    "ToGhost": {
      "Available": true,
      "Download": true
    }
  },

  "ProgressTracking": {
    "Series": {
      "CurrentStanding": true,
      "PointsEarned": true,
      "PointsNeeded": true,
      "RacesRemaining": true
    },
    "Level": {
      "XPGained": true,
      "ProgressBar": true,
      "NextLevel": true
    },
    "Challenges": {
      "Completed": true,
      "Progress": true
    }
  },

  "SocialFeatures": {
    "Share": {
      "Results": true,
      "Screenshot": true,
      "Platforms": ["InGame", "Clipboard"]
    },
    "AddFriend": {
      "FromResults": true,
      "QuickAdd": true
    },
    "Invite": {
      "Rematch": true,
      "ToParty": true
    },
    "Report": {
      "Available": true,
      "FromResults": true
    }
  },

  "Replay": {
    "QuickAccess": {
      "FromResults": true,
      "SaveReplay": true
    },
    "Highlights": {
      "AutoGenerated": true,
      "OvertakeMoments": true,
      "CloseFinishes": true
    }
  },

  "Actions": {
    "Primary": {
      "Continue": { "ToLobby": true },
      "Rematch": { "SameSettings": true },
      "NextRace": { "InSeries": true }
    },
    "Secondary": {
      "ViewReplay": true,
      "SaveReplay": true,
      "ViewStats": { "Detailed": true },
      "ReturnToMenu": true
    }
  },

  "RaceTypes": {
    "Circuit": {
      "ShowLaps": true,
      "ShowSectors": true,
      "ShowGaps": true
    },
    "Sprint": {
      "ShowDistance": true,
      "ShowCheckpoints": true
    },
    "Drift": {
      "ShowScore": true,
      "ShowCombos": true,
      "ShowMultipliers": true
    },
    "Drag": {
      "ShowReactionTime": true,
      "ShowQuarterMile": true,
      "ShowTrapSpeed": true
    },
    "TimeAttack": {
      "ShowBestLap": true,
      "ShowTheoreticalBest": true,
      "ShowSectorBests": true
    }
  },

  "UI": {
    "Animations": {
      "PositionReveal": { "Staggered": true },
      "StatsCounter": { "Animated": true },
      "Rewards": { "PopIn": true }
    },
    "Transitions": {
      "FromPodium": { "Fade": true },
      "ToNextScreen": { "Smooth": true }
    },
    "Tabs": {
      "Standings": true,
      "DetailedStats": true,
      "Rewards": true,
      "Replay": true
    }
  }
}
